<p id="notice"></p>
<div class="col-md-8 offset-md-2">
  <h4>注文履歴一覧</h4>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |orders| %>
        <tr>
          <td>
            <%= orders.id %>
          </td>
          <td>
            <%= orders.name %>
          </td>
          <td>
            <%= orders.price %>
          </td>
          <td>
            <%= orders.genre_id %>
          </td>
          <td>
            <%= orders.is_active %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>