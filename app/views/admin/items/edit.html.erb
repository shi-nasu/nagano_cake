<p id="notice"></p>
<div class="col-md-10 offset-md-1">
  <h4>商品編集</h4>
</div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-5 col-lg-4 px-8 px-sm-5 mx-auto">
          <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>

            <div class="form-group">
              <label for="item_image">商品画像</label>
              <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>

            <div class="form-group">
              <label for="item_name">商品名</label>
              <%= f.text_field :name, autofocus: true, id:"item_name" %>
            </div>

            <div class="form-group">
              <label for="item_introduction">商品説明</label>
              <%= f.text_area :introduction %>
            </div>

            <div class="form-group">
              <label for="item_genre">ジャンル</label>
              <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
            </div>

            <div class="form-group">
              <label for="item_price">税抜価格</label>
              <%= f.number_field :price, autofocus: true, id:"price" %>円
            </div>

            <div class="form-group">
              <label for="item_status">販売ステータス</label>
                <%= f.radio_button :is_active, true %>販売中
                <%= f.radio_button :is_active, false %>販売停止中</br>
            </div>

            <div class="form-group">
              <%= f.submit "変更を保存", class: 'btn btn-success' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>