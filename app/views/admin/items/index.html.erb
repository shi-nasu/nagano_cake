<p id="notice"></p>
<div class="col-md-8 offset-md-2">
  <h4>商品一覧</h4>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品id</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= item.name %>
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= item.genre_id %>
          </td>
          <td>
            <%= item.is_active %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>