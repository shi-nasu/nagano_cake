<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
      <h4>会員詳細</h4>
        <table class="table">
  		    <tbody>
  		      <tr>
  		        <th>会員ID</th>
              <td>
               <%= @customers.id %>
                <br>
              </td>
            </tr>
            <tr>
              <th>氏名</th>
              <td>
                <%= @customers.last_name %><%= @customers.first_name %>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <%= @customers.last_name_kana %><%= @customers.first_name_kana %>
              </td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td>
                <%= @customers.postal_code %>
              </td>
            </tr>
            <tr>
              <th>住所</th><br>
              <td>
                <%= @customers.address %>
              </td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td>
                <%= @customers.telephone_number %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= @customers.email %>
              </td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <% if @customers.is_deleted == true %>
                  退会
                <% else %>
                  有効
                <% end %>
              </td>
            </tr>

              <td>
                <%= link_to "編集する", edit_admin_customer_path(@customers.id), class: "btn btn-success" %>
              </td>

              <td>
                <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>