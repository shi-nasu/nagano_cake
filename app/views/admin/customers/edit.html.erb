<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h4>会員情報編集</h4>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
          <div class="form-group">
            <label for="customers_name">氏名</label>
              (姓)<%= f.text_field :last_name, autofocus: true, id:"name" %>
              (名)<%= f.text_field :first_name, autofocus: true, id:"name" %>
          </div>

          <div class="form-group">
            <label for="name_kana">フリガナ</label>
              (セイ)<%= f.text_field :last_name_kana, autofocus: true, id:"name" %>
              (メイ)<%= f.text_field :first_name_kana, autofocus: true, id:"name" %>
          </div>

          <div class="form-group">
            <label for="postal_code">郵便番号（ハイフンなし）</label>
              <%= f.text_field :postal_code, autofocus: true, id:"postal" %>
          </div>

          <div class="form-group">
            <label for="address">住所</label>
              <%= f.text_field :address, autofocus: true, id:"address" %>
          </div>

          <div class="form-group">
            <label for="telephone_number">電話番号</label>
              <%= f.text_field :telephone_number, autofocus: true, id:"telephone" %>
          </div>

          <div class="form-group">
            <label for="email">メールアドレス</label>
              <%= f.text_field :email, autofocus: true, id:"email" %>
          </div>

          <div class="form-group">
            <label for="item_status">会員ステータス</label>
              <%= f.radio_button :is_deleted, true %>有効
              <%= f.radio_button :is_deleted, false %>退会</br>
          </div>

          <div class="form-group">
            <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>