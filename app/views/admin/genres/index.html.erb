<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
      <h4>ジャンル一覧・追加</h4>
        <p><strong>ジャンル名</strong></p>
          <%= form_with model: @genre, url:admin_genres_path do |f| %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録" %>
          <% end %>

        <div class="col-md-8 m-5 offset-md-1">
          <p>ジャンル</p>
            <table class="table">
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td>
                      <%= genre.name %>
                    </td>
                    <td>
                      <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>