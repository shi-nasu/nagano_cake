<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <div class="form-group">
          <label>ジャンル名</label><br>
            <%= f.text_field :name %>
            <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>