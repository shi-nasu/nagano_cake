<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-6">
        <h4>注文履歴詳細画面</h4>
        <table class="table table-bordered">
          <p>注文情報</p>
          <tbody>
            <tr>
              <th class="table-secondary">注文日</th>
                <td>
                  <%= @order.created_at %>
                </td>
            </tr>
            <tr>
              <th class="table-secondary">配送先</th>
                <td>
                  <%= @order.postal_code %>
                  <%= @order.address %>
                  <%= @order.name %>
                </td>
            </tr>
            <tr>
              <th class="table-secondary">支払方法</th>
                <td>
                  <%= @order.payment_method %>
                </td>
            </tr>
            <tr>
              <th class="table-secondary">ステータス</th>
                <td>
                  <%= @order.status %>
                </td>
            </tr>
          </tbody>
        </table>
      </div>


        <div class="col-md-3 offset-md-1">
          <div class="row">
            <table class="table table-bordered">
              <p>請求情報</p>
              <tbody>
                <tr>
                  <th class="table-secondary">商品合</th>
                  <td><%= @order.order_details.sum(&:subtotal) %></td>
                </tr>
                <tr>
                  <th class="table-secondary">配送料</th>
                  <td><%= @order.shipping_cost %></td>
                </tr>
                <tr>
                  <th class="table-secondary">ご請求額</th>
                  <td><%= @order.shipping_cost + @cart_items.sum(&:subtotal) %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-md-5 offset-md-3">
          <table class="table table-bordered">
            <p>注文内容</p>
            <thead>
              <tr class="table-secondary">
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_details.includes(:item).each do |order_detail| %>
              <% item = order_detail.item %>
              <tr>
                <td>
                  <%= item.name %>
                </td>
                <td>
                  <%= order_detail.price %>
                </td>
                <td>
                  <%= order_detail.amount %>
                </td>
                <td>
                  <%= order_detail.subtotal %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
