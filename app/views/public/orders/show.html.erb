<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-8 ml-4">
        <h4>注文履歴詳細画面</h4>
        <table class="table table-bordered">
          <p>注文情報</p>
            <thead>
              <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>支払方法</th>
                <th>ステータス</th>
              </tr>
            </thead>
          <tbody>

            <tr>
              <td>
                <%= @order.created_at %>
              </td>
              <td>
                <%= @order.postal_code %>
                <%= @order.address %>
                <%= @order.name %>
              </td>
              <td>
                <%= @order.payment_method %>
              </td>
              <td>
                <%= @order.status %>
              </td>
            </tr>

          </tbody>
        </table>
      </div>

        <div class="col-md-8 offset-md-1">
          <table class="table table-bordered">
            <p>請求情報</p>
            <tbody>
              <tr>
                <th>商品合計</th>
                  <td>
                    <%= @order.order_details.sum(&:subtotal) %>
                  </td>

                <tr>配送料</tr>
                  <td>
                    <%= @order.shipping_cost %>
                  </td>

                <th>請求金額</th>
                  <td>
                    <%= @order.shipping_cost + @cart_items.sum(&:subtotal) %>
                  </td>
              </tr>
            </tbody>
          </table>
        </div>

        <table class="table table-bordered">
          <p>注文内容</p>
            <thead>
              <tr>
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_details.includes(:item).each do |order_detail| %>
              <% item = order_detail.item %>
              <tr>
                <td>
                  <%= item.name %>
                </td>
                <td>
                  <%= order_detail.price %>
                </td>
                <td>
                  <%= order_detail.amount %>
                </td>
                <td>
                  <%= order_detail.subtotal %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
