<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-8 ml-4">
        <h4>注文情報確認</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= image_tag order.item.get_profile_image(100,50), size: "100x50" %>
                <%= order.item.name %>
              </td>
              <td>
                <%= order.item.price %>
              </td>
              <td>
                  <%= order.cart_item.amount %>
              </td>
              <td>
                <%= order.cart_item.amount*order.item.price %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        <div class="col-md-8 offset-md-1">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>送料</th>
                <tr>商品合計</tr>
                <th>請求金額</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.shipping_cost %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= order.cart_item.amount*order.item.price %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= order.total_payment %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
    <h4><strong>支払方法</strong></h4>
    <%= order.payment_method %></br>

    <h4><strong>お届け先</strong></h4>
    <%= current_customer.postal_code %>
    <%= current_customer.address %>
    <%= current_customer.last_name %><%= current_customer.first_name %></br>

  <div class="center-block">
    <%= link_to "注文を確定する", orders_path, class: "btn btn-success" %>
  </divv>

  </div>