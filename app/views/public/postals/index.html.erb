<p id="notice"></p>
<div class="col-3">
  <h4>配送先登録/一覧</h4>
</div>
  <div class="container">
    <div class="row">
      <%= form_with model: @postal do |f| %>

        <div class="field">郵便番号（ハイフンなし）
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">住所
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">宛名
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
    </div>
  </div>

    <div class="col-9 ml-3">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @postals.each do |postals| %>
            <tr>
              <td>
                <%= postals.postal_code %>
              </td>
              <td>
                <%= postals.address %>
              </td>
              <td>
                <%= postals.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_postal_path(postals.id), class: "btn btn-success" %>
                <%= link_to "削除する", postal_path(postals.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% end %>
    </div>