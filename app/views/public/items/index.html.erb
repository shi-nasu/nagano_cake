<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h4>商品一覧</h4>
        <table class="table">
  		    <tbody>
  		      <% @items.each do |item| %>
  		      <tr>
              <td>
                <%= image_tag item.get_profile_image(100,100), size: "100x100" %><br>
                <%= link_to item.name, item_path(item.id) %>
              </td>
              <td>
                ¥<%= item.price %>
              </td>
            </tr>
            <% end %>
            <%= paginate @items %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

